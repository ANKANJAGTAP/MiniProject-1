# MongoDB Atlas
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp"

# Supabase (create project at https://supabase.com)
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"  # SERVER ONLY - NEVER EXPOSE TO CLIENT
SUPABASE_ANON_KEY="your-anon-key"

# Next.js Public Environment Variables (automatically prefixed)
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Application Configuration
FRONTEND_HOST="http://localhost:3000"
CORS_ORIGINS="http://localhost:3000,https://your-production-domain.com"

# Admin Configuration
ADMIN_EMAILS="admin1@example.com,admin2@example.com"

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Optional: S3 Configuration (for persistent QR storage)
S3_BUCKET=""
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_REGION=""